{
  "name": "@voiceflow/git-branch-check",
  "description": "Voiceflow branch naming check",
  "version": "1.0.0",
  "author": "Voiceflow",
  "bin": {
    "git-branch-check": "./index.js"
  },
  "bugs": {
    "url": "https://github.com/storyflow/git-branch-check/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "current-git-branch": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.5.0",
    "@voiceflow/commitlint-config": "^1.0.1",
    "@voiceflow/eslint-config": "^2.0.5",
    "@voiceflow/prettier-config": "^1.0.5",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "fixpack": "^2.3.1",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "prettier-eslint-cli": "^5.0.0"
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/storyflow/git-branch-check#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && node index.js"
    }
  },
  "keywords": [
    "branch",
    "git",
    "linting",
    "pattern"
  ],
  "license": "MIT",
  "lint-staged": {
    "package.json": [
      "fixpack",
      "git add"
    ],
    "**/*.js": [
      "eslint --fix",
      "prettier-eslint --write",
      "git add"
    ]
  },
  "main": "index.js",
  "prettier": "@voiceflow/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/storyflow/git-branch-check.git"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "fixpack && eslint \"**/*.js\"",
    "lint:fix": "yarn lint --fix",
    "lint:quiet": "yarn lint --quiet",
    "lint:report": "yarn lint --format json -o sonar/report.json",
    "prepare": "fixpack"
  }
}
